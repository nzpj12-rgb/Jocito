<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0A0A"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial y Diagnóstico"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#1A1A1A"
        android:layout_marginBottom="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_mapmode"
                android:alpha="0.2"
                app:tint="#00E5FF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruta última 24h: Mulchén - Los Ángeles"
                android:textColor="#00E5FF"
                android:layout_margin="12dp"
                android:textSize="12sp"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminal de Comandos (Live Logs)"
        android:textColor="#00FF41"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#000000"
        app:strokeColor="#333333"
        app:strokeWidth="1dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">
            <TextView
                android:id="@+id/tvConsoleLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[15:02] Initializing GPS...\n[15:02] Socket connected to n8n\n[15:05] Proximity: 4.2m - Key detected\n[15:10] ACC ON: Engine Started\n[15:15] Lat: -37.721 | Lon: -72.241"
                android:textColor="#00FF41"
                android:fontFamily="monospace"
                android:textSize="12sp"/>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>